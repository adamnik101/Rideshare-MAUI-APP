<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rideshare.Pages.ProfilePage"
             Title="My profile">
    <VerticalStackLayout
        Spacing="15">
        <Label 
            Text="Profile page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label x:Name="lblFullname"/>
        <Label x:Name="lblEmail"/>
        
        
        <Button Text="Log out" Clicked="Button_Clicked" HorizontalOptions="FillAndExpand" BackgroundColor="White" TextColor="DeepSkyBlue"/>
    </VerticalStackLayout>
</ContentPage>